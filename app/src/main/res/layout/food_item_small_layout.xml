<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foodItemSmallLayoutConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:background="@android:color/transparent"
    android:clipToPadding="true"
    android:translationY="-20dp">

    <ImageView
        android:id="@+id/foodItemSmallLayoutImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sushi2" />

    <TextView
        android:id="@+id/foodItemSmallLayoutLblName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:text="Sushi"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/foodItemSmallLayoutImg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodItemSmallLayoutImg"
        app:layout_constraintTop_toBottomOf="@+id/foodItemSmallLayoutImg" />

    <TextView
        android:id="@+id/foodItemSmallLayoutLblPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorWhite"
        android:elevation="10dp"
        android:fontFamily="@font/open_sans_regular"
        android:outlineProvider="none"
        android:text="Price"
        android:textAllCaps="false"
        android:textColor="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="@+id/foodItemSmallLayoutImg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/foodItemSmallLayoutImg"
        app:layout_constraintTop_toBottomOf="@+id/foodItemSmallLayoutLblName" />

    <androidx.cardview.widget.CardView
        android:id="@+id/foodItemSmallLayoutImgBackground"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodItemSmallLayoutImg" />

</androidx.constraintlayout.widget.ConstraintLayout>